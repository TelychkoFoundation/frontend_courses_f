{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "src/app/",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/components": ["components/index.ts"],
      "@/typings": ["typings/index.ts"],
      "@/hooks": ["hooks/index.ts"],
      "@/context": ["context/index.ts"],
      "@/constants": ["constants/index.ts"],
      "@/lib": ["lib/index.ts"],
      "@/models": ["models/index.ts"],
      "@/actions": ["actions/index.ts"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "global.d.ts"],
  "exclude": ["node_modules"]
}
